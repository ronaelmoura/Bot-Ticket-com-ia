{
	"compilerOptions": {
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"strict": true,


		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noImplicitReturns": true,

		"lib": ["ESNext"],
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "./src",
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
